<form role="form" id="formFechamento" class="form-horizontal" ng-if="pedido.situacao == 1">
    <div>
        <br />
        <div class="row">
            <h3 class="text-info">Fechamento do pedido</h3>
            <hr />
        </div>
        <fieldset>
            <legend>Pagamento</legend>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Valor total: <span class="text-success">{{pedido.valorTotal | currency: "R$ "}}</span></h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label for="formaPagamento">Selecione a forma de pagamento</label>
                    <select name="formaPagamento" required id="formaPagamento" class="form-control" ng-model="pedido.formaPagamento">
                        <option value="">(Selecione)</option>
                        <option value="D">Dinheiro</option>
                        <option value="C">Cartão de crédito</option>
                        <option value="B">Cartão de débito</option>
                        <option value="A">Cartão alimentação - Alelo</option>
                    </select>
                    <div class="help-block with-errors"></div>
                </div>
                <div class="col-sm-2" ng-if="pedido.formaPagamento == 'D'">
                    <label for="trocoPara">Pagar com</label>
                    <input type='text' name="trocoPara" id="trocoPara" format="number" class="form-control" max="{{pedido.valorTotal}}" maxlength="10" ng-model="pedido.trocoPara" ng-blur="pedido.troco = pedido.trocoPara - pedido.valorTotal" />
                    <div class="help-block with-errors"></div>
                </div>
                <div class="col-sm-2" ng-if="pedido.formaPagamento == 'D'">
                    <label for="trocoPara">Troco</label>
                    <input type='text' name="trocoPara" id="trocoPara" class="form-control" maxlength="10" readonly ng-model="pedido.troco | currency: ' R$ '" />
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="row">

            </div>
        </fieldset>
        <br />
        <fieldset>
            <legend>Entrega</legend>
        </fieldset>
    </div>
</form>