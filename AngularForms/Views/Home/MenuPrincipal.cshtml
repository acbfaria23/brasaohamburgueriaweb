@using Microsoft.AspNet.Identity
@using AngularForms.Model;
<style>
    .btn-sq-lg {
        margin: 2px;
    }
</style>
<br />
<div class="row">
    <div class="col-sm-12">
        <h4>O que você deseja fazer?</h4>
        <hr />
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <p>
                <a href="~/Cardapio/Listar" class="btn btn-sq-lg btn-primary">
                    <br />
                    <i class="fa fa-list-ul fa-3x"></i><br />
                    Ver <br>cardápio
                </a>
                <a href="~/Pedido/Index" class="btn btn-sq-lg btn-success">
                    <br />
                    <i class="fa fa-plus-square fa-3x"></i><br />
                    Fazer <br>pedido
                </a>
                <a href="~/Pedido/AcompanharPedido" class="btn btn-sq-lg btn-warning">
                    <br />
                    <i class="fa fa-eye fa-3x"></i><br />
                    Acompanhar<br>pedido
                </a>
                <a href="~/Pedido/ConsultarPedidos" class="btn btn-sq-lg btn-info">
                    <br />
                    <i class="fa fa-search fa-3x"></i><br />
                    Consultar<br>pedidos
                </a>
                @if (User.IsInRole(Constantes.ROLE_ADMIN))
                {
                    <a href="~/Pedido/GerenciarPedidos" class="btn btn-sq-lg btn-default">
                        <br />
                        <i class="fa fa-tasks fa-3x"></i><br />
                        Gerenciar<br>pedidos
                    </a>
                }
            </p>
        </div>
    </div>
</div>